public class Main {
    public static void main(String[] args) {
        AlbumCRUD.addAlbum("Thriller", "Michael Jackson", "Pop", 19.99);
        AlbumCRUD.addAlbum("Back in Black", "AC/DC", "Rock", 15.99);
        
        System.out.println("Всі альбоми:");
        AlbumCRUD.getAllAlbums();
        
        AlbumCRUD.updateAlbum(1, "Thriller (Special Edition)", "Michael Jackson", "Pop", 22.99);
        
        AlbumCRUD.deleteAlbum(2);
        
        System.out.println("\nВсі альбоми після оновлення та видалення:");
        AlbumCRUD.getAllAlbums();
    }
}
